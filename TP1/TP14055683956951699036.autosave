void draw(){
    
//que dificil es el case, guardalo:
    
    println("contador: "+ contador);    
  
      //Pantalla 0        
    switch (pantalla) {
        
                
        case 0 :
            background(#FFFFFF);
            textSize(30);
            fill(#FFFFFF);

            circle(botonX0, botonY0, tamBoton);
            d = dist(botonX0, botonY0, mouseX, mouseY);

            if (d < tamBoton) {
                fill(0);

            } else {
                fill(255);
            }
            ellipse(botonX0, botonY0, tamBoton, tamBoton);          
            
            
       
        break;	



    //Pantalla 1    
        case 1 :
            contador = contador + masmas;   
            colorDeFondo1 = 255;
            background(#FFFFFF);
            image(imagen0, 0, 0);
            fill(1);
            textSize(30);
            text(texto1, x1, y1);
            x1 = x1 + velx1;
            y1 = y1 + vely1;
        	
              
            if (x1 > width - 150){
                velx1 = -4;
                    
            } else if (x1 < -0) {
                velx1 = velx1 + 6;
            }
            if (y1 > height) {
                vely1 = -4;
                    
            }else if (y1 < -0) {
                vely1 = vely1 + 6;
                    
            }

            if (contador >= 1000) {
                contador = 0;
                pantalla = 2;
            }
        break;



        //Pantalla 2   
        case 2 :
            background(0);
            image(imagen1, x1, y1);



            if (contador >= 1000) {
                contador = 0;
                pantalla = 0;
                

            }
        break;	

    }     
            
}

            

